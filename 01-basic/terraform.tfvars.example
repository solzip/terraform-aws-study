# Terraform 변수 값 예시 파일
# 이 파일을 복사하여 terraform.tfvars 파일을 만들고 실제 값을 입력하세요
#
# 사용 방법:
# $ cp terraform.tfvars.example terraform.tfvars
# $ vim terraform.tfvars  # 값 수정

# ==========================================
# 기본 설정
# ==========================================

# AWS 리전 설정
# - ap-northeast-2: 서울
# - us-east-1: 버지니아
# - ap-southeast-1: 싱가포르
aws_region = "ap-northeast-2"

# 환경 구분 (dev, staging, prod 중 선택)
environment = "dev"

# 프로젝트 이름 (리소스 태그 및 이름에 사용)
# 소문자, 숫자, 하이픈(-)만 사용 가능
project_name = "terraform-basic"

# ==========================================
# 네트워크 설정
# ==========================================

# VPC CIDR 블록
# 기본값: 10.0.0.0/16 (65,536개 IP 주소)
vpc_cidr = "10.0.0.0/16"

# Public Subnet CIDR 블록
# VPC CIDR 범위 내에 있어야 함
# 기본값: 10.0.1.0/24 (256개 IP 주소)
public_subnet_cidr = "10.0.1.0/24"

# 가용 영역 (선택사항)
# null로 설정하면 자동으로 첫 번째 가용 영역 선택
# 예: "ap-northeast-2a", "ap-northeast-2c"
# availability_zone = "ap-northeast-2a"
availability_zone = null

# ==========================================
# EC2 인스턴스 설정
# ==========================================

# 인스턴스 타입
# 프리티어: t2.micro (권장)
# 기타: t2.small, t3.micro
instance_type = "t2.micro"

# AMI ID (선택사항)
# null로 설정하면 최신 Amazon Linux 2023 자동 선택
# 특정 AMI를 사용하려면 AMI ID 입력
# ami_id = "ami-0c9c942bd7bf113a2"
ami_id = null

# 루트 볼륨 크기 (GB)
# 프리티어는 최대 30GB까지 무료
# 최소: 8GB, 최대: 30GB
root_volume_size = 8

# ==========================================
# 보안 설정
# ==========================================

# SSH 접근 허용 IP 목록
# 보안을 위해 특정 IP만 허용하는 것을 권장합니다
# 예: ["1.2.3.4/32", "5.6.7.8/32"]
# 모든 IP 허용 (권장하지 않음): ["0.0.0.0/0"]
allowed_ssh_cidr_blocks = ["0.0.0.0/0"]

# HTTP 접근 허용 IP 목록
# 웹 서버이므로 보통 모든 IP 허용
allowed_http_cidr_blocks = ["0.0.0.0/0"]

# ==========================================
# 추가 태그 (선택사항)
# ==========================================

# 리소스에 추가할 사용자 정의 태그
# 비용 추적, 관리, 규정 준수 등에 활용
additional_tags = {
  Owner      = "YourName"
  Team       = "DevOps"
  CostCenter = "Engineering"
  # Compliance = "PCI-DSS"
  # Purpose    = "Learning"
}

# ==========================================
# 기능 플래그 (선택사항)
# ==========================================

# EC2 상세 모니터링 활성화 여부
# true: 1분 간격 모니터링 (추가 비용 발생)
# false: 5분 간격 모니터링 (무료)
enable_detailed_monitoring = false

# EBS 최적화 활성화 여부
# t2.micro는 EBS 최적화 미지원
enable_ebs_optimization = false

# ==========================================
# 참고사항
# ==========================================

# 1. 이 파일은 Git에 커밋하지 마세요!
#    .gitignore에 terraform.tfvars가 포함되어 있어야 합니다.
#
# 2. 민감한 정보 (AWS 키, 비밀번호 등)는 이 파일에 저장하지 마세요.
#    AWS Secrets Manager 또는 환경 변수를 사용하세요.
#
# 3. 프로덕션 환경에서는 allowed_ssh_cidr_blocks를
#    특정 IP 주소로 제한하는 것을 강력히 권장합니다.
#
# 4. 비용 발생을 최소화하려면:
#    - instance_type = "t2.micro" (프리티어)
#    - root_volume_size = 8 (최소값)
#    - enable_detailed_monitoring = false
#
# 5. 실습 후에는 반드시 리소스를 삭제하세요:
#    $ terraform destroy